@model IEnumerable<ModelEF.Model.Category>

@{ ViewBag.Title = "Index";
                Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml"; }

<div class="container-fluid">
    <br />
    <div class="row">
        <div class="col-sm-2">
            <a class="btn btn-success" href="@Url.Action("create","category")"><i class="fa fa-plus" aria-hidden="true"></i>Thêm mới</a>
        </div>
        @using (Html.BeginForm("Index", "category", FormMethod.Get, new { @class = "form-horizontal" }))
        {
<div class="topnav">
    <div class="input-group">
        <input type="text" placeholder="Nhập vào từ cần tìm" value="" class="form-control">
        <div class="input-group-btn">
            <button type="submit" class="btn btn-success"><i class="fa fa-search"></i>Tìm kiếm</button>
        </div>
    </div>
</div>}
    </div>
</div>


<div class="content mt-3">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <!-- /.panel-heading -->
                    <div class="panel-body">


                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                                        <th>@Html.DisplayNameFor(model => model.Metatitle)</th>
                                        <th>@Html.DisplayNameFor(model => model.Description)</th>
                                        <th>#</th>
                                    </tr>
                                </thead>
                                <tbody id="tblProduct">
                                    @foreach (var item in Model)
                                    {
                        <tr id="@item.ID">
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @(item.Metatitle == null ? "": item.Metatitle)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                <button name="view" type="button" onclick="location.href='@Url.Action("details", "category", new { id = item.ID})'" class="btn btn-primary icon-only"><i class="fa fa-info"></i></button>&nbsp; |
                                <button name="update" onclick="location.href='@Url.Action("edit", "category", new { id = item.ID})'" type="button" class="btn btn-warning icon-only"><i class="fa fa-edit"></i></button>&nbsp; |
                                <button name="delete" type="button" class="btn btn-danger icon-only"><i class="fa fa-trash"></i></button> |
                            </td>
                        </tr>}
                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.panel-body -->
                </div>
            </div>
        </div>
    </div>
</div>
<div class="content mt-3">
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
            <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1">Previous</a>
            </li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item">
                <a class="page-link" href="#">Next</a>
            </li>
        </ul>
    </nav>

</div>
